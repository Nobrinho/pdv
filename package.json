{
  "name": "syscontrol-desktop",
  "productName": "SysControl",
  "version": "1.3.3",
  "description": "Sistema de Controle de Estoque e Vendas",
  "main": "electron/main.js",
  "author": "Emerson Nobre",
  "license": "MIT",
    "repository": {
    "type": "git",
    "url": "https://github.com/Nobrinho/pdv.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "migrate:make": "knex migrate:make --knexfile ./database/knexfile.js",
    "migrate:latest": "knex migrate:latest --knexfile ./database/knexfile.js"
  },
  "build": {
    "appId": "com.syscontrol.app",
     "publish": [
      {
        "provider": "github",
        "owner": "Nobrinho",
        "repo": "pdv"
      }
    ],
    "productName": "SysControl",
    "copyright": "Copyright Â© 2025 Emerson Nobre. All rights reserved.",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "database/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "./database",
        "to": "database",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SysControl"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "better-sqlite3": "^9.4.0",
    "chart.js": "^4.4.1",
    "dayjs": "^1.11.10",
    "electron-updater": "^6.6.2",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.23",
    "knex": "^3.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  }
}
